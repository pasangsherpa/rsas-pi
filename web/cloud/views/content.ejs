<div class="row author">
    <div class="col-xs-12">
    <strong>
        Pasang Sherpa | Takatoshi Tomoyose | Aaron Nelson | Jonathan Forbes
    </strong>
    </div>
</div>
<div class="well holder">
    <div class="panel panel-info">
        <div class="panel-body">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Image</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i < activities.length; i++) {
                    var date = new Date(activities[i].get('enteredAt'))
                        enteredTime = date.toLocaleTimeString(),
                        enteredDate = date.toLocaleDateString() %>
                    <tr>
                      <td><%= enteredDate %></td>
                      <td><%= enteredTime %></td>
                      <td><span class="glyphicon glyphicon-picture" id="<%= activities[i].id%>" style="cursor:pointer"></span></td>
                    </tr>
                    <tr style="cursor:default">
                      <td colspan="3"><img src="<%= activities[i].get('photoUrl')%>" id="img-<%= activities[i].id%>" class="img-responsive hidden" alt="image"></td>
                    </tr>
                <% } %>
              </tbody>
            </table>
        </div>
    </div>
</div>