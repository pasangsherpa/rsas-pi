<div class="row author">
    <div class="col-xs-12">
    <strong>
        Pasang Sherpa | Takatoshi Tomoyose | Aaron Nelson | Jonathan Forbes
    </strong>
    </div>
</div>
<div class="well holder">
    <div class="panel panel-info">
        <div class="panel-body">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Image</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i < activities.length; i++) {
                    var date = new Date(activities[i].get('enteredAt').toString()),
                        hours = date.getHours();
                        date.setHours(hours - 8);
                    var enteredTime = date.toLocaleTimeString(),
                        enteredHour = enteredTime.substring(0,2),
                        enteredTime = enteredHour > 12 ? enteredHour - 12 + enteredTime.substring(2, enteredTime.length) + " PM": enteredTime + " AM",
                        enteredDate = date.toLocaleDateString(),
                        enteredLocalTime = new Date %>
                    <tr id="<%= activities[i].id%>" style="cursor:pointer">
                      <td><%= enteredDate %></td>
                      <td><%= enteredTime %></td>
                      <td><span class="glyphicon glyphicon-picture"></span></td>
                    </tr>
                    <tr style="cursor:default">
                      <td colspan="3"><img src="<%= activities[i].get('photoUrl')%>" id="img-<%= activities[i].id%>" class="img-responsive hidden" alt="image"></td>
                    </tr>
                <% } %>
              </tbody>
            </table>
        </div>
    </div>
</div>